{
  "name": "px2rem-plus",
  "displayName": "px2rem+",
  "description": "Convert px to rem extension for Visual Studio Code.",
  "version": "0.0.3",
  "publisher": "hex-ci",
  "repository": "https://github.com/hex-ci/px2rem-plus-vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:stylus"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.px2rem-plus:convert",
        "title": "px2rem+ convert"
      },
      {
        "command": "extension.px2rem-plus:settings",
        "title": "px2rem+ settings"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "px2rem+",
      "properties": {
        "px2rem-plus.base": {
          "type": "number",
          "default": 75,
          "description": "The base pixel size for px convert to rem. This can be overridden inline."
        },
        "px2rem-plus.precision": {
          "type": "number",
          "default": 6,
          "description": "The number of digits to the right of the decimal point"
        },
        "px2rem-plus.comments": {
          "type": "boolean",
          "default": false,
          "description": "Add origin pixel value like /* 100/75 */"
        },
        "px2rem-plus.leadingZero": {
          "type": "boolean",
          "default": false,
          "description": "Keep the leading zero for converted values < 1. E.g. 0.5rem (preserved) vs .5rem (not preserved)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "babel src -d out -s",
    "watch": "babel src -d out -w -s --verbose",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "babel-eslint": "^10.0.1",
    "eslint": "^4.11.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  }
}
