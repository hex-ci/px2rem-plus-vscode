{
  "name": "px2rem-plus",
  "displayName": "px2rem+",
  "description": "Convert px to rem extension for Visual Studio Code.",
  "version": "0.0.4",
  "publisher": "hex-ci",
  "repository": "https://github.com/hex-ci/px2rem-plus-vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "rem",
    "px",
    "css",
    "autocomplete",
    "intellisense"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.px2rem-plus:convert",
        "title": "Convert to rem",
        "category": "px2rem+"
      },
      {
        "command": "extension.px2rem-plus:settings",
        "title": "Set base pixel size",
        "category": "px2rem+"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.px2rem-plus:settings",
          "group": "extension.px2rem-plus@1"
        },
        {
          "command": "extension.px2rem-plus:convert",
          "group": "extension.px2rem-plus@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.px2rem-plus:settings",
        "key": "ctrl+alt+p"
      },
      {
        "command": "extension.px2rem-plus:convert",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "px2rem+ configuration",
      "properties": {
        "px2rem-plus.base": {
          "type": "number",
          "default": 75,
          "description": "The base pixel size for px convert to rem. This can be overridden inline."
        },
        "px2rem-plus.precision": {
          "type": "number",
          "default": 6,
          "description": "The number of digits to the right of the decimal point"
        },
        "px2rem-plus.comments": {
          "type": "boolean",
          "default": false,
          "description": "Add origin pixel value like /* 100/75 */"
        },
        "px2rem-plus.leadingZero": {
          "type": "boolean",
          "default": false,
          "description": "Keep the leading zero for converted values < 1. E.g. 0.5rem (preserved) vs .5rem (not preserved)"
        },
        "px2rem-plus.twoWayConversion": {
          "type": "boolean",
          "default": false,
          "description": "Support to convert rem to px, using the base pixel size, but only in autocomplete."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "babel src -d out -s",
    "watch": "babel src -d out -w -s --verbose",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "babel-eslint": "^10.0.1",
    "eslint": "^4.11.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  }
}
